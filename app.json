{
  "expo": {
    "name": "ColorHunt",
    "slug": "ColorHunt-recipes-app",
    "description": "React Native Recipes App Demo.",
    "privacy": "public",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": ["ios", "android"],
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#007AFF"
    },
    "splash": {
      "image": "./assets/ScreenFlash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.colorhunt.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSNotificationsUsageDescription": "We need your permission to send you notifications"
      }
    },
    "android": {
      "package": "com.colorhunt.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "googleServicesFile": "./android/app/google-services.json"
    },
    "web": {
      "favicon": "./assets/icon.png"
    }
  }
}
